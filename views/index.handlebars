<div class="col">
    <h2>Burgers Not Eaten!</h2>
    <ul class="list-group">
        {{#each burgers}}
        <li class="list-group-item-action change-burger">
            <button data-id={{id}} devoured={{devoured}}>
            {{id}}. {{burger_name}}
            </button>
        </li>
        {{/each}}
        
    </ul>
</div>

<div class="col">
    <h2>Burgers Eaten!</h2>
    <ul class="list-group">
        <li class="list-group-item-action change-burger">
        {{#each burgers}}
        {{#if this.devoured}}
        <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}">
        {{/if}}
        </li>
        {{/each}}
    </ul>
</div>

<div class="row">
    <div class="col-lg">
        <br>
        <br>
        <br>
        <form class="create-form">

            <div class="form-group">
                <input type="text" id="newburger" name="name">
            </div>
            <h2>Enter a burger you want to eat and hit submit!</h2>

            <button type="submit">Add a Burger!</button>
        </form>
    </div>
</div>