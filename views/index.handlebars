<div class="col">
    <h2>Click a Burger to Devour It!</h2>
    <ul class="list-group">
        {{#each burgers}}
        {{#unless this.devoured}}
        <li class="list-group-item-action change-burger">
            <button type="button" class="btn" data-id={{id}} devoured=0>
                {{id}}. {{burger_name}}
            </button>
        </li>
        {{/unless}}
        {{/each}}

    </ul>
</div>

<div class="col">
    <h2>Burgers Devoured!</h2>
    <ul class="list-group">
        {{#each burgers}}
        {{#if this.devoured}}
        <li class="list-group-item-action">
            <button type="button" class="btn" disabled>
                {{id}}. {{burger_name}}
            </button>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<div class="row">
    <div class="col-lg">
        <br>
        <br>
        <br>
        <form class="create-form">

            <div class="form-group">
                <input type="text" id="newburger" name="name">
            </div>
            <h2>Enter a burger you want to eat and hit submit!</h2>

            <button type="submit">Add a Burger!</button>
        </form>
    </div>
</div>